{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "baseUrl": "src",
        "declaration": true,
        "declarationMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./dist",
        "removeComments": false,
        "sourceMap": true,
        "target": "ESNext",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2020"
        ]
    }
}