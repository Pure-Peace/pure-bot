{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "outDir": "./dist",
        "baseUrl": "src",
        "sourceMap": true,
        "removeComments": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2020"
        ]
    }
}